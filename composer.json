{
  "name": "omz13/kirby3-xmlsitemap",
  "version": "0.4.1",
  "description": "kirby3 plugin to generate an xml-based sitemap",
  "license": "MIT",
  "keywords": [
    "kirby3",
    "plugin",
    "sitemap"
  ],
  "autoload": {
    "files": [
      "src/config.php"
    ],
    "psr-4": {
      "omz13\\": "src/"
    }
  },
  "authors": [{
    "name": "David Somers",
    "email": "dsomers@omz13.com",
    "homepage": "https://meldingstuff.com",
    "role": "Developer"
  }],
  "repositories": [{
    "type": "vcs",
    "url": "https://github.com/k-next/kirby"
  },
  {
    "type": "path",
    "url": "../coding-standard"
  }
],
  "require": {
    "php": ">=7.1",
    "getkirby/cms": "dev-master as 3.0.0"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^1.0",
    "omz13/coding-standard": "@dev",
    "phpstan/phpstan": "^0.10.3",
    "phpmd/phpmd": "^2.6"
  },
  "suggest": {
    "liip/rmt": "For release management"
  },
  "scripts": {
    "lint": "./vendor/bin/parallel-lint ./src/*",
    "style": "./vendor/bin/phpcs --standard=omz13-k3p ./src/*",
    "mess" : "./vendor/bin/phpmd ./src text codesize,controversial,design,unusedcode",
    "stan": "./vendor/bin/phpstan analyse --level 5 ./src",
    "sanity": [
      "make tools",
      "@lint",
      "./vendor/bin/phpcs --standard=omz13-k3p -n ./src/*",
      "@stan",
      "@mess"
    ],
    "fix": [
      "./vendor/bin/phpcbf --standard=omz13-k3p ./src/*",
      "./vendor/bin/phpcs --standard=omz13-k3p -s ./src/*"
    ],
    "build": [
      "@sanity",
      "composer dumpautoload -o"
    ],
    "zip": [
      "composer remove getkirby/cms",
      "composer dumpautoload -o",
      "composer archive --format=zip --dir=dist",
      "composer require getkirby/cms:'dev-master as 3.0.0'",
      "composer dumpautoload -o"
    ]
  },
  "archive": {
    "exclude": [
      ".*",
      "makefile",
      "*.xml",
      "!/vendor/*",
      "/vendor/*/*/.*",
      "/vendor/*/*/docs/*",
      "/vendor/*/*/example/*",
      "/vendor/*/*/examples/*",
      "/vendor/*/*/test/*",
      "/vendor/*/*/tests/*",
      "/vendor/*/*/php4/*"
  ]
  },
  "minimum-stability": "beta"
}
